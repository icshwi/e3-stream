# One should define the any dependency modules and EPICS base path
# in the following directory

.PHONY: pcre pcre-clean

# pcre building system has dependency upon the EPICS base

pcre:
	$(QUIET)echo "EPICS_BASE=$(EPICS_BASE)" >> $(TOP)/$(E3_MODULE_SRC_PATH)/configure/RELEASE
	$(MAKE) -C $(E3_MODULE_SRC_PATH)/pcre BUILD_PCRE=$(BUILD_PCRE)
   

pcre-clean:
	$(MAKE) -C $(E3_MODULE_SRC_PATH)/pcre clean



